@model Minie.Carters.Data.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html prefix="og: http://ogp.me/ns#">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ropinhas - @Model.Name</title>
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://minic.apphb.com/product/@Model.SKU&ref=fb" />
    <meta property="og:title" content="@Model.Name" />
    <meta property="og:image" content="@Model.Image" />
    <meta property="og:description" content="@Model.Name de Carter's por apenas @string.Format("{0:C}", Model.Price * 5)" />
</head>
<body>
    @Request.UserAgent
</body>
</html>
